<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/phone_box"
        android:layout_width="267dp"
        android:layout_height="57dp"
        android:background="@drawable/ic_phonefield"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="phone"
        tools:ignore="LabelFor"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="165dp" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="140dp"
        android:layout_height="36dp"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="96dp" />

    <ImageView
        android:id="@+id/send_btn"
        android:layout_width="143dp"
        android:layout_height="97dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/ic_message"
        tools:layout_editor_AbsoluteX="272.45px"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="247dp" />

    <TextView
        android:id="@+id/dbkt_img"
        android:layout_width="301dp"
        android:layout_height="40dp"
        android:fontFamily="cursive"
        android:text="Developed By Krishna Teja"
        android:textColor="@color/green_home"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="371dp" />

    <TextView
        android:id="@+id/sc_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Select Country:"
        android:textColor="@color/green_home"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="96dp" />

    <TextView
        android:id="@+id/wunm_txt"
        android:layout_width="155dp"
        android:layout_height="68dp"
        android:fontFamily="cursive"
        android:text="WUNM"
        android:textColor="@color/green_home"
        android:textSize="50dp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="3dp" />

</androidx.constraintlayout.widget.ConstraintLayout>