<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/phone_box"
        android:layout_width="237dp"
        android:layout_height="53dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/ic_phonefield"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="LabelFor" />

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="354dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/send_btn"
        android:layout_width="137dp"
        android:layout_height="120dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="80dp"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_message"
        tools:layout_editor_AbsoluteX="272.45px" />

    <TextView
        android:id="@+id/dbkt_img"
        android:layout_width="294dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="422dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="cursive"
        android:text="Developed By Krishna Teja"
        android:textColor="@color/green_home"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="353dp"
        android:fontFamily="cursive"
        android:text="Select Country:"
        android:textColor="@color/green_home"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wunm_txt"
        android:layout_width="155dp"
        android:layout_height="68dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="408dp"
        android:fontFamily="cursive"
        android:text="WUNM"
        android:textColor="@color/green_home"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>